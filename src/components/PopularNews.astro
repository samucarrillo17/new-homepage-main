---
import Image from 'astro/components/Image.astro';

type Props = {
    title: string;
    image: ImageMetadata; 
    description: string;
    slug: string; 
}
const {title,image,slug,description} = Astro.props
---

    <article
      class="border-b border-Greyish-blue/40 py-8 last:border-0 last:mb-0 last:pb-0 xl:py-7 flex flex-col gap-4 lg:flex-row lg:gap-4 "
    >
    <a href={`/popular/${slug}`}>
        <Image src={image} format="webp" loading="eager" alt={title} class="w-full lg:w-[400px]"/>
    </a>

    <div class="flex flex-col gap-2">
        <a
        href={`/popular/${slug}`}
        class="text-xl font-extrabold hover:text-Soft-orange cursor-pointer mb-2 inline-block"
      transition:name={title}
        >{title}</a
      >
      <p class="text-Dark-grayish-blue text-[14.9984px]">{description}</p>

    </div>
      
    </article>
